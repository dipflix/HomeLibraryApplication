<UserControl x:Class="HomeLibraryApplication.Views.Managements.AuthorControlContext"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeLibraryApplication.Views.Managements"
             mc:Ignorable="d" >
    <StackPanel>
        <StackPanel>
            <Label Content="First name"/>
            <TextBox 
                x:Name="textBox_firstName"
                Height="32" 
                Margin="0 0 0 16"  
                VerticalAlignment="Stretch" 
                VerticalContentAlignment="Center"
                 Text="{Binding Entity.FirstName}"
                 />
        </StackPanel>
        <StackPanel>
            <Label Content="Last name"/>
            <TextBox 
                Height="32" 
                Margin="0 0 0 16" 
                VerticalAlignment="Stretch" 
                VerticalContentAlignment="Center"
                Text="{Binding Entity.LastName}"
                 />
        </StackPanel>
    </StackPanel>
</UserControl>
