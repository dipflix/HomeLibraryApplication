<UserControl x:Class="HomeLibraryApplication.Views.Components.NamedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeLibraryApplication.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0 0 0 16">
        <Label Content="{Binding Title}" Padding="0 0 0 4"/>
        <TextBox Text="{Binding TextBoxContext}" Padding="16 8 16 8"/>
    </StackPanel>
</UserControl>
 